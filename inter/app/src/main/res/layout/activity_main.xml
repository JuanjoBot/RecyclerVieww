<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/gray"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phoneInfo"
        android:textSize="50dp"
        android:drawableStart="@drawable/android2"
        android:background="@color/darkgray"
        android:textColor="@color/white"
        android:textAlignment="center"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:drawableTop="@drawable/cloud"
            android:text="Cloud"
            android:textAlignment="center"
            android:textSize="20dp" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="18dp"
            android:drawableTop="@drawable/bluetooth"
            android:text="Bluetooth"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@color/white"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:drawableTop="@drawable/gesture"
            android:text="Gesture"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="18dp"
            android:background="@color/white"
            android:drawableTop="@drawable/icon"
            android:text="GPS"
            android:textAlignment="center"
            android:textSize="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:drawableTop="@drawable/bell"
            android:text="Notification"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView

            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="18dp"
            android:background="@color/white"
            android:drawableTop="@drawable/internett"
            android:text="Internet"
            android:textAlignment="center"
            android:textSize="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:drawableTop="@drawable/language"
            android:text="Language"
            android:textAlignment="center"
            android:textSize="20dp" />
        <TextView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="18dp"
            android:drawableTop="@drawable/images"
            android:text="Info"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@color/white"

            />
    </RelativeLayout>


</LinearLayout>